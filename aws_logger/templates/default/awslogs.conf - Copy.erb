state_file = <%= @state_file %>

<% @aws_logger.each do |log_group_name, log_streams| %>
<%  log_streams.each do |log| %>
<%      if log["file"] == "AGENT"
          log_path = node["aws_logger"]["AGENT_LOGS"]
        elsif log["file"] == "CHEF"
          log_path = node["aws_logger"]["CHEF_LOGS"]
        else
          log_path = log["file"]
        end %>
[<%= log_group_name %> <%= log_path %>]
datetime_format = [%Y-%m-%d %H:%M:%S]
log_group_name = <%= log_group_name %>
log_stream_name = <%= @hostname %> - <%= log_path %>
initial_position = start_of_file
file = <%= log_path %>

<%  end %>
<% end %>


